<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/daily_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_journal"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/daily_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_title_text">

        <EditText
            android:id="@+id/daily_input_title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/black" />

        <EditText
            android:id="@+id/daily_input_content"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/daily_input_title" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>