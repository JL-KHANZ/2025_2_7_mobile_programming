<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/daily_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_journal"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/daily_input_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp"
        android:gravity="center"
        android:background="@drawable/dailyedittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/daily_input_title"
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:layout_marginHorizontal="20dp"
            android:background="#555" />

        <EditText
            android:id="@+id/daily_input_content"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/black"
            />

        <ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="50sp">

            <Button
                android:layout_width="10sp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="10sp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="10sp"
                android:layout_height="match_parent"/>
        </ActionMenuView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>