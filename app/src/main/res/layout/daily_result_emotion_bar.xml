<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/emotion_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" android:text="Emotion"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:id="@+id/bar_container"
        android:layout_width="0dp"
        android:layout_height="20dp" android:layout_weight="0.7" android:orientation="horizontal"
        android:background="@drawable/bar_background_rounded"
        >
        <View
            android:id="@+id/emotion_score_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bar_fill_rounded"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/emotion_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="100%"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>