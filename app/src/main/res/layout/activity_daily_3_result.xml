<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/daily_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="오늘 당신의 감정은:"
        android:textSize="25sp"
        android:padding="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기쁨"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_result_title"
        app:layout_constraintBottom_toTopOf="@id/daily_results_relative_layout"
        />

    <RelativeLayout
        android:id="@+id/daily_results_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@id/daily_feedback_results_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_result_text">

        <LinearLayout
            android:id="@+id/daily_results_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

        </LinearLayout>
        <!--        placeholder-->
        <LinearLayout
            android:id="@+id/daily_placeholder_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/daily_feedback_results_scroll_view"
        android:layout_width="0dp"
        android:layout_height="350sp"
        android:paddingHorizontal="15dp"
        android:background="#F8F8F8"
        app:layout_constraintBottom_toTopOf="@id/daily_results_buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_results_relative_layout">
        <LinearLayout
            android:id="@+id/daily_feedback_results_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/daily_results_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/daily_3_search_chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화 상대 찾기"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/daily_3_btn_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_button_purple"/>

        <ImageButton
            android:id="@+id/daily_3_btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_black_24dp"
            android:background="@color/white"
            android:padding="23dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>